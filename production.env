# üåç PRODUCTION ENVIRONMENT - WORLDWIDE DEPLOYMENT
# Copy this to .env for production

# ========================================
# BLOCKCHAIN CONFIGURATION (MAINNET)
# ========================================
ENABLE_BLOCKCHAIN=true
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# üîë PRODUCTION ADMIN WALLET (REQUIRED)
# Generate a new wallet for production and fund it with real SOL
ADMIN_PRIVATE_KEY=YOUR_PRODUCTION_PRIVATE_KEY_HERE

# üèóÔ∏è PRODUCTION PROGRAM IDs (OPTIONAL)
# Deploy your own Solana programs for better security
PLAYER_PROFILE_PROGRAM_ID=
GAME_SESSION_PROGRAM_ID=
ACHIEVEMENT_PROGRAM_ID=
BOOM_TOKEN_MINT=

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=8000
NODE_ENV=production

# ========================================
# SECURITY SETTINGS
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS origins for production
ALLOWED_ORIGINS=https://your-game-domain.com,https://www.your-game-domain.com,https://kaboom-game.koyeb.app

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_PATH=./kaboom_game_production.db
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# ========================================
# MONITORING & ANALYTICS
# ========================================
MONITORING_ENABLED=true
LOG_LEVEL=info
METRICS_ENABLED=true
ALERT_EMAIL=your-email@domain.com

# ========================================
# DEPLOYMENT PLATFORM
# ========================================
# For Koyeb deployment
KOYEB_APP_NAME=kaboom-game
KOYEB_REGION=us-east

# For other platforms
PLATFORM=production
